#!/bin/bash
# XSS Vibes V2 - Quick Hunt Script
# Fast domain reconnaissance with Osmedeus-style pipeline

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m'

# Quick banner
print_quick_banner() {
    echo -e "${PURPLE}üî• XSS Vibes V2 - Quick Hunt${NC}"
    echo -e "${CYAN}‚ö° Fast reconnaissance for domains${NC}"
    echo ""
}

# Usage
show_usage() {
    echo "Usage: $0 <domain> [workspace_name]"
    echo ""
    echo "Examples:"
    echo "  $0 example.com"
    echo "  $0 example.com my_scan"
    echo ""
    exit 1
}

# Main
main() {
    if [[ $# -lt 1 ]]; then
        show_usage
    fi
    
    local domain="$1"
    local workspace="${2:-quick_$(date +%Y%m%d_%H%M%S)}"
    
    print_quick_banner
    
    echo -e "${GREEN}üéØ Target: $domain${NC}"
    echo -e "${GREEN}üìÇ Workspace: $workspace${NC}"
    echo ""
    
    # Run comprehensive scan
    ./tools/xss-crawler -d "$domain" -w "$workspace"
    
    echo ""
    echo -e "${GREEN}üéâ Quick hunt completed!${NC}"
    echo -e "${CYAN}üìÅ Results: workspaces/$workspace${NC}"
}

main "$@"
